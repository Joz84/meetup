

<div class="navbar-wrapper"></div>

<div class="navbar-mihivai">
  <!-- Logo -->
  <a href="/" class="navbar-mihivai-brand">
    <%= image_tag "logo.jpg" %>
  </a>

  <div class="d-none d-md-block">
    <div class="d-flex align-items-center justify-content-between">
      <%= link_to "Intervenants", "#", class: "navbar-mihivai-item navbar-mihivai-link" %>
      <%= link_to "Contact", "mailto:bordeaux@lewagon.org", class: "navbar-mihivai-item navbar-mihivai-link" %>
      <% if user_signed_in? %>
        <%= link_to "Nouvelle inscription", destroy_user_session_path, method: :delete , class: "navbar-mihivai-item btn btn-red"%>
      <% else %>
        <%= link_to "Inscription", new_user_registration_path , class: "navbar-mihivai-item btn btn-red"%>
      <% end %>
    </div>
  </div>

  <div class="d-block d-md-none">
    <div class="navbar-dropdown">
      <input id="toggle" type="checkbox"/>
      <label class="hamburger" for="toggle">
        <div class="top"></div>
        <div class="meat"></div>
        <div class="bottom"></div>
      </label>

      <div class="nav">
        <div class="nav-wrapper">
          <nav class= "d-flex flex-column">
            <%= link_to "Intervenants", root_path, class: "navbar-link" %>
            <%= link_to "Contact", "mailto:bordeaux@lewagon.org", class: "navbar-link" %>
            <% if user_signed_in? %>
              <%= link_to "Nouvelle inscription", destroy_user_session_path, method: :delete , class: "navbar-mihivai-item btn btn-red"%>
            <% else %>
              <%= link_to "Inscription", new_user_registration_path , class: "navbar-mihivai-item btn btn-red"%>
            <% end %>
          </nav>
        </div>
      </div>
    </div>

  </div>
</div>

<div style="height: 70px;"></div>
